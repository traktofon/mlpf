# Copy this file to local.mk and change compilation settings
# according to your compiler and BLAS/LAPACK libraries.

# the Fortran compiler
FC := gfortran

# the Fortran compiler options
FFLAGS := -Wall -g -fcheck=all
#FFLAGS := -O2

# the Fortran compiler flag that specifies where .mod files are put
MODFLAG := -J

# the C compiler
CC := gcc

# the C compiler options
CFLAGS := -Wall -g

# the linking options
LDFLAGS :=

# the libraries (BLAS/LAPACK or compatible)
LIBS := -llapack -lblas

